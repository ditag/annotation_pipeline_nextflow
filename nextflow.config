
params.input = "faa/*.faa" 	// input sequences
params.databases_dir = "$PWD/databases"
params.cog = false
params.orthofinder = false
params.interproscan = false
params.uniparc = false
params.uniprot_data = false
params.tcdb = false
params.blast_swissprot = false
params.plast_refseq = false
params.diamond_refseq = false
params.diamond_refseq_taxonomy = false
params.refseq_diamond_BBH_phylogeny = false
params.refseq_diamond_BBH_phylogeny_top_n_hits = 4
params.refseq_diamond_BBH_phylogeny_phylum_filter = '["Chlamydiae", "Verrucomicrobia", "Planctomycetes", "Kiritimatiellaeota", "Lentisphaerae"]'
params.string = false
params.pdb = false
params.oma = false
params.ko = false
params.tcdb_gblast = false
params.PRIAM = true
params.orthogroups_phylogeny_with_iqtree = false
params.orthogroups_phylogeny_with_fasttree = false
params.core_missing = 6
params.genome_faa_folder = "$PWD/faa"
params.executor = 'local'

params.local_sample_sheet = "local_assemblies.tab"
params.ncbi_sample_sheet = "ncbi_assemblies.tab"


process.queue = 'normal'
process.memory = '2G'
process.cpus = 2

executor {
  $lsf {
      queueSize = 100
      pollInterval = '30sec'
  }
  $local {
      cpus = 8
      memory = '32 GB'
  }
}

conda.cacheDir = "$HOME/miniconda3/nextflow"

